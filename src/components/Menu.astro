---
import { Icon } from 'astro-icon/components'
---
<header class="sticky top-0 z-50 w-full border-b bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/60">
    <div class="container mx-auto flex h-16 items-center px-4">
        <a href="/" class="flex items-center space-x-2">
            <img src="/images/dccp-logo.png" alt="DCCP Logo" class="h-14 w-auto" />
            <!-- <span class="font-bold hidden md:inline">Data Center College of the Philippines - Baguio City</span> -->
        </a>
        <nav class="hidden md:flex mx-6 items-center space-x-4 lg:space-x-6">
            <a href="/academics" class="text-sm font-medium transition-colors hover:text-blue-600">Academics</a>
            <a href="/about" class="text-sm font-medium transition-colors hover:text-blue-600">About</a>
            <a href="/news" class="text-sm font-medium transition-colors hover:text-blue-600">News</a>
        </nav>
        <div class="flex items-center ml-auto">
            <a href="#" class="hidden md:inline-flex items-center justify-center rounded-md text-sm font-medium bg-blue-600 text-white hover:bg-blue-700 h-10 px-4 py-2">
                Inquire Now
            </a>
            <button class="inline-flex items-center justify-center rounded-md text-sm font-medium border border-input bg-background hover:bg-accent h-10 w-10 md:hidden">
                <Icon name="heroicons:bars-3-solid" class="h-5 w-5" />
                <span class="sr-only">Toggle menu</span>
            </button>
        </div>
    </div>
</header>
