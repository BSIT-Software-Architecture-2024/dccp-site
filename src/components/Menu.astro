---
import { Icon } from 'astro-icon/components'
---
<header class=" w-full mt-5 fixed z-50  ">
    <div class="container mx-auto flex h-16 items-center px-4">
        <a href="/" class="flex items-center space-x-2">
            <img src="/images/dccp-logo.png" alt="DCCP Logo" class="h-14 w-auto" />
            <!-- <span class="font-bold hidden md:inline text-[#0891B2]">Pagedone</span> -->
        </a>
        <nav class="hidden md:flex mx-6 items-center space-x-4 lg:space-x-6 text-gray-700">
            <a href="/" class="text-lg font-medium transition-colors hover:text-[#0891B2]">Home</a>
            <a href="/about" class="text-lg font-medium transition-colors hover:text-[#0891B2]">About us</a>
            <div class="relative group">
                <button class="text-lg font-medium transition-colors hover:text-[#0891B2] flex items-center">
                    courses
                    <Icon name="heroicons:chevron-down" class="h-4 w-4 ml-1" />
                </button>
            </div>
        </nav>
        <div class="flex items-center ml-auto space-x-6 mr-10">
            <a href="#" class="text-lg font-medium border border-gray-700 rounded-md px-4 py-2 transition-colors hover:text-[#0891B2]">Login</a>
            <a href="#" class="inline-flex items-center justify-center rounded-md text-lg font-medium bg-[#0891B2] text-white hover:bg-[#0891B2]/90 h-10 px-4 py-2">
                Sign up
            </a>
        </div>
    </div>
</header>
